<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net45;netcoreapp3.1;net5.0;netstandard2.0;netstandard2.1</TargetFrameworks>
		<RootNamespace>Camlex.Client</RootNamespace>
		<AssemblyName>Camlex.Client.2013.dll</AssemblyName>
		<Description>Camlex.NET for client object model. Camlex.NET simplifies creating of CAML queries for SharePoint 2013 by using C# and lambda expressions.</Description>
		<SignAssembly>true</SignAssembly>
		<AssemblyOriginatorKeyFile>..\Camlex.Client\Camlex.NET.snk</AssemblyOriginatorKeyFile>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)' == 'Release'">
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	</PropertyGroup>

	<ItemGroup>
		<Compile Include="..\Camlex.Client\*.cs;..\Camlex.Client\*\*.cs;..\Camlex.Client\*\*\*.cs;..\Camlex.Client\*\*\*\*.cs;..\Camlex.Client\*\*\*\*\*.cs" Exclude="..\Camlex.Client\*\Assembly*.cs;..\Camlex.Client\bin\**;..\Camlex.Client\obj\**" />
	</ItemGroup>

	<ItemGroup>
		<Reference Include="Microsoft.SharePoint.Client">
			<HintPath>..\Assemblies\15\Microsoft.SharePoint.Client.dll</HintPath>
		</Reference>
		<Reference Include="Microsoft.SharePoint.Client.Runtime">
			<HintPath>..\Assemblies\15\Microsoft.SharePoint.Client.Runtime.dll</HintPath>
		</Reference>
	</ItemGroup>

</Project>
